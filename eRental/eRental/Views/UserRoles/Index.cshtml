@using Microsoft.AspNetCore.Identity
@model dynamic

@{
    ViewData["Title"] = "User Roles";
}

<style>
    h1, p {
        text-align: center;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .create-role-link {
        text-align: center;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }
</style>

<div class="container">
    <h1>Application Roles</h1>

    <table>
        <thead>
            <tr>
                <th>User</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AppUser user in Model.Users)
            {
                <tr>
                    <td>@user.Email</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>
